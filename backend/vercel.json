
{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ],
    "env": {
        "MONGO_URI": "your_mongodb_uri",
        "JWT_SECRET": "your_jwt_secret",
        "CLIENT_URL": "https://your-frontend-url.vercel.app"
    }
}